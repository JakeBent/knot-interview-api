generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  firstName   String
  lastName    String

  credentials Credentials[]
  cards       Card[]
}

model Credentials {
  id        String   @id @default(uuid())
  website   String
  username  String   /// @encrypted
  password  String   /// @encrypted

  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Card {
  id        String   @id @default(uuid())
  network   String
  name      String   /// @encrypted
  number    String   /// @encrypted
  expMonth  String   /// @encrypted
  expYear   String   /// @encrypted
  cvv       String   /// @encrypted
  lastFour  String   /// @encrypted
  zip       String

  user      User     @relation(fields: [userId], references: [id])
  userId    String
}